<form action="/books/{{_id}}" method="POST">
  <label for="title">Title</label>
  <input type="text" value="{{book.title}}" name="title" id="title">
  <label for="description">Description</label>
  <input type="text" value="{{book.description}}" name="description" id="description">
  <label for="rating">Rating</label>
  <input type="number" value="{{book.rating}}" name="rating" id="rating">
  <label for="author">Author</label>
  <select name="author" id="author">
    {{#each authors}}
    <option value="{{_id}}">{{name}} {{lastName}}</option>
    {{/each}}
  </select>
  <button type="submit">Edit the book</button>
</form>